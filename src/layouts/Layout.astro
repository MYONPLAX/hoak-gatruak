---
import Head from '$lib/components/basic/Head.astro';

interface Props {
	title: string;
	styles?: string[];
	description?: string;
}

const { title, styles, description } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<Head {title} {styles} {description} />
	<body>
		<slot />
	</body>
</html>

<style>
	html {
		width: 100%;
		height: 100%;
	}
	body {
		margin: 0;
		width: inherit;
		height: inherit;
	}
</style>
