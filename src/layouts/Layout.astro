---
import { sitename } from '$lib/lib/contentsList';
import Head from '$lib/components/basic/Head.astro';
import Navigation from '$lib/components/basic/Navigation.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;

const fullTitle = title === sitename ? title : `${title} - ${sitename}`;
---

<!doctype html>
<html lang="ja">
	<Head title={fullTitle} {description} />
	<body>
		<Navigation />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Colour */
		--epaper-dark: #222222;
		--epaper-light: #e4e5e0;

		/* Font */
		--font-family:
			system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
			Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', Arial, sans-serif;
	}
</style>

<style>
	html {
		width: 100%;
		height: 100%;
	}

	body {
		margin: 0;
		width: inherit;
		height: inherit;
		min-height: 100dvh;
	}
</style>
