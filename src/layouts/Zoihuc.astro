---
import type IntfFrontmatter from '$lib/lib/zoihuc/IntfZhcFrontmatter';
import Layout from '$lib/layouts/Layout.astro';
import ZhcHeader from '$lib/components/zoihuc/ZhcHeader.astro';
import ZhcFooter from '$lib/components/zoihuc/ZhcFooter.astro';

interface Props {
	frontmatter: IntfFrontmatter;
	visibleTags: boolean;
}

const { frontmatter, visibleTags } = Astro.props;
---

<Layout title={frontmatter.title}>
	<head>
		<link rel="stylesheet" href="/stylesheets/zoihuc.css" />
	</head>
	<ZhcHeader {frontmatter} {visibleTags} />
	<slot />
	<ZhcFooter />
</Layout>
